<resources xmlns:tools="http://schemas.android.com/tools" xmlns:ns1="http://schemas.android.com/apk/res-auto">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AFAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/C_App_Main</item>
        <item name="colorPrimaryDark">@color/C_App_Main</item>
        <item name="colorAccent">@color/C_App_Main</item>
        <item name="android:windowAnimationStyle">@style/ActivityEnterExitAnimation</item>
        <item name="android:windowLightStatusBar" ns1:targetApi="m" tools:ignore="NewApi">false</item>
        <item name="android:windowBackground">@color/C_App_BG</item>
    </style>
    <style name="AFFullscreenTheme" parent="AFAppTheme">
        <item name="android:windowFullscreen">true</item>
    </style>
    <style name="ActivityEnterExitAnimation">
        <item name="android:activityOpenEnterAnimation">@android:anim/fade_in</item>
        <item name="android:activityOpenExitAnimation">@android:anim/fade_out</item>
        <item name="android:activityCloseEnterAnimation">@android:anim/fade_in</item>
        <item name="android:activityCloseExitAnimation">@android:anim/fade_out</item>
    </style>
    <style name="AnimSelectPopup">
        <item name="android:windowEnterAnimation">@anim/select_popup_in</item>
        <item name="android:windowExitAnimation">@anim/select_popup_out</item>
    </style>
    <style name="DialogBGT" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
    <style name="DialogTransparent" parent="DialogBGT">
        <item name="android:backgroundDimEnabled">false</item>
    </style>
</resources>